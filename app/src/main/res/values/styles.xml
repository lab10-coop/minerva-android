<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <!-- No action bar theme -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:colorPressedHighlight">@color/colorPrimaryLight</item>

        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="icon">@color/icons</item>
        <item name="divider">@color/divider</item>
    </style>

    <style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <!-- Splash theme -->

    <!-- Toolbar style -->

    <style name="ConfrimDialog">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Minerva">
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">#3f3f4b</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>

    <style name="Minerva.CardTitle" parent="Minerva">
        <item name="android:textColor">#ff5858ed</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Minerva.Card.SectionTitle" parent="Minerva">
        <item name="android:textColor">#ff908f9d</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Minerva.Card.ConfirmationDialog.Hint" parent="Minerva.Card.SectionTitle" />

    <style name="Minerva.Card.Activity.Title" parent="Minerva">
        <item name="android:textColor">#ff5858ed</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Minerva.Card.Activity.Time" parent="Minerva">
        <item name="android:textColor">#ff908f9d</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Minerva.Card.Activity.Name" parent="Minerva">
        <item name="android:textColor">#ff3f3f4b</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Minerva.Card.Value" parent="Minerva">
        <item name="android:textColor">#ff3f3f4b</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Minerva.Card.Value.Title" parent="Minerva.Card.Value">
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="Minerva.Card.Value.ActionText" parent="Minerva.Card.Value">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Minerva.Card.PaymentType" parent="Minerva">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Minerva.Card.Recipient" parent="Minerva">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Minerva.Card.ConfirmationDialog.Cancel" parent="Minerva">
        <item name="android:textColor">#ff5858ed</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Minerva.Identity.Avatar.Text" parent="Minerva">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Minerva.Title" parent="Minerva">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Minerva.Text.Sub" parent="Minerva">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ff908f9d</item>
    </style>

</resources>
